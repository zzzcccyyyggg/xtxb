<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverActivity">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"></com.baidu.mapapi.map.MapView>

    <ImageButton
        android:id="@+id/button_findpark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bn_ic_short_fun_car_manager"
        android:contentDescription="停车场信息"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center|end" />

    <!-- 悬浮按钮 -->
    <Button
        android:id="@+id/button_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="历史记录"
        android:textSize="20sp"
        android:textStyle="bold"
        android:contentDescription="历史记录"
        android:background="@color/snow"
        android:layout_gravity="center|start" />

    <ImageButton
        android:id="@+id/btn_getPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />
    <TextView
        android:id="@+id/tvEmptyResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="搜索结果为空"
        android:visibility="gone" />
    
    <!-- 可以添加其他布局元素 -->
    <ListView
        android:id="@+id/searchResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/b"
        android:layout_gravity="top"
        android:visibility="gone" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Theme.Lmap.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Lmap.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:background="@color/snow"
        android:textStyle="bold"
        android:hint="请输入您想查看的位置" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
